<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/create_scroll"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_create_drive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.ggktech.bookmydrive.CreateDriveActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive Name"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:id="@+id/title_drive_name"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/drive_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:hint="Enter Drive name"
            android:paddingLeft="10dp"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive Location"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:id="@+id/title_drive_location"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/drive_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:hint="Enter Drive location"
            android:paddingLeft="10dp"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive Technology"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:id="@+id/title_drive_tech"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/tech_spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/spinner_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/panel_crew_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Panel Crew"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/add_Panel_member"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:tint="@color/colorAccent"
                android:padding="5dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="@drawable/panel_item_bg"
                />
        </RelativeLayout>

        <com.ggktech.bookmydrive.PredicateLayout
            android:id="@+id/panel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_bg"
            android:padding="5dp">

        </com.ggktech.bookmydrive.PredicateLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled Date"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:id="@+id/title_drive_date"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/drive_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:hint="Select Drive Date"
            android:paddingLeft="10dp"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive Description"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:id="@+id/title_drive_desc"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/drive_desc"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:hint="Enter Drive Description"
            android:paddingLeft="10dp"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_create_drive"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="Create"
            android:elevation="4dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>