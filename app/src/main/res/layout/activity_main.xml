<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ggktech.bookmydrive.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Schedule Drive"
        android:textColor="@android:color/white"
        android:id="@+id/create_drive_btn"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Drive History"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:id="@+id/view_drive_btn"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Add Panel"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:id="@+id/add_panel_btn"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Contact us"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:id="@+id/contact_btn"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:id="@+id/logout_btn"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"/>
</LinearLayout>
